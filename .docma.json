{
  "src": ["./README.md", "./src/common/utils.js"],
  "dest": "./docs/api",
  "clean": true,
  "jsdoc": {
    "sort": "grouped",
    "plugins": ["plugins/markdown"]
  },
  "app": {
    "title": "Zignis Documentation",
    "base": "/zignis/api/",
    "entrance": "content:readme",
    "routing": "path",
    "server": "github"
  },
  "template": {
    "options": {
      "title": {
        "label": "Zignis",
        "href": "https://zhike-team.github.io/zignis/"
      },
      "sidebar": {
        "enabled": true,
        "collapsed": true
      },
      "navbar": {
        "menu": [
          {
            "label": "Home",
            "href": "https://zhike-team.github.io/zignis/"
          },
          {
            "label": "Get started",
            "href": "https://zhike-team.github.io/zignis/api"
          },
          {
            "label": "API Peference",
            "href": "https://zhike-team.github.io/zignis/api?api"
          },
          {
            "iconClass": "fab fa-lg fa-github",
            "label": "",
            "href": "https://github.com/zhike-team/zignis",
            "target": "_blank"
          }
        ]
      }
    }
  }
}
