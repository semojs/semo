{
  "src": [
    {
      "documentation": "./docs/README.md"
    },
    {
      "guide": "./README.md"
    },
    "./src/common/utils.js"
  ],
  "dest": "./docs/public",
  "clean": true,
  "jsdoc": {
    "sort": "grouped",
    "plugins": ["plugins/markdown"]
  },
  "app": {
    "title": "Zignis Documentation",
    "base": "/zignis",
    "entrance": "content:guide"
  },
  "template": {
    "options": {
      "title": {
        "label": "Zignis",
        "href": "https://zhike-team.github.io/zignis/"
      },
      "sidebar": {
        "enabled": true,
        "collapsed": true
      },
      "navbar": {
        "menu": [
          {
            "label": "Guide",
            "href": "?content=guide"
          },
          {
            "label": "Documentation",
            "href": "?content=documentation"
          },
          {
            "label": "API References",
            "href": "?api"
          },
          {
            "iconClass": "fab fa-lg fa-github",
            "label": "",
            "href": "https://github.com/zhike-team/zignis",
            "target": "_blank"
          }
        ]
      }
    }
  }
