{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["src/@types", "./node_modules/@types/"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "./src/**/.*.json", "./src/**/*.json"],
  "exclude": ["node_modules"]
}
