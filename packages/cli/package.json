{
  "name": "@semo/cli",
  "version": "2.0.21",
  "description": "Semo CLI - a pluggable command-line development tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/semojs/semo"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "templates"
  ],
  "bin": {
    "semo": "./lib/bin.js"
  },
  "scripts": {
    "clean": "rimraf lib *.tsbuildinfo",
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@semo/core": "workspace:^",
    "envinfo": "^7.14.0",
    "rimraf": "^6.0.1",
    "yaml": "^2.7.1",
    "yargs": "^18.0.0",
    "yargs-parser": "^22.0.0"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0"
  },
  "devDependencies": {
    "@types/envinfo": "^7.8.4",
    "@types/yargs": "^17.0.33",
    "@types/yargs-parser": "^21.0.3"
  }
}
