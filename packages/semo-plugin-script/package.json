{
  "name": "semo-plugin-script",
  "version": "2.0.21",
  "description": "A semo plugin to provide project scripts convension.",
  "keywords": [
    "cli",
    "command",
    "semo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/semojs/semo"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "templates"
  ],
  "license": "MIT",
  "engines": {
    "node": "^20.19.0 || ^22.12.0"
  },
  "devDependencies": {
    "@semo/core": "workspace:^",
    "@types/yargs-parser": "^21.0.3",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "clean": "rimraf lib *.tsbuildinfo",
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "prepare": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "@semo/core": "^2.0.0"
  },
  "dependencies": {
    "yargs-parser": "^22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
