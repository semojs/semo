{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,

    "rootDir": ".",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@semo/*": ["packages/*"]
    }
  },
  "include": ["bin/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "lib", "**/*.config.ts", "*.config.ts"]
}
