{
  "name": "semo-monorepo",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lerna": "lerna",
    "semo": "node ./packages/cli/lib/bin.js",
    "tsx:semo": "tsx ./packages/cli/lib/bin.js",
    "semo1": "node --require ts-node/register ./node_modules/@semo/cli/lib/bin.js",
    "build": "pnpm --filter=@semo/core build && pnpm -r --stream --parallel --filter='./packages/*' build",
    "dev": "pnpm --filter=@semo/core build && pnpm -r --parallel --filter='./packages/*' dev",
    "test": "vitest run",
    "test:watch": "vitest ",
    "test:ui": "vitest --ui",
    "test:cov": "vitest run --coverage",
    "cov": "c8 report --check-coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "format:check": "prettier --check \"**/*.{ts,js}\"",
    "publish": "pnpm -r publish --access public",
    "prepublish": "lerna run prepublish",
    "lerna:publish": "lerna publish from-git --yes --no-verify-access",
    "clean": "pnpm -r --stream --parallel clean",
    "deploy:major": "lerna version major",
    "deploy:minor": "lerna version minor",
    "deploy": "lerna version patch -y",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview",
    "cs:add": "changeset add",
    "cs:version": "changeset version",
    "cs:publish": "pnpm build && changeset publish",
    "cs:release": "pnpm build && pnpm cs:version && pnpm install --no-frozen-lockfile && git add . && git commit -m 'chore: version packages' && git push --follow-tags",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/eslint-plugin": "^1.1.44",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lerna": "^8.2.2",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@semo/core": "link:packages/core"
  }
}
