{
  "name": "semo",
  "private": true,
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "vuepress": "^1.5.0"
  },
  "scripts": {
    "test": "exit 0",
    "lerna": "lerna",
    "prepublish": "lerna run prepublish",
    "lerna:publish": "lerna publish from-git --yes",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "upgrade:preview": "lerna exec -- ncu && ncu",
    "upgrade": "lerna exec -- ncu -u --timeout 300 && lerna exec -- yarn && ncu -u --timeout 300 && yarn",
    "deploy:major": "lerna version major",
    "deploy:minor": "lerna version minor",
    "deploy": "lerna version patch -y"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:semojs/semo.git"
  }
}
